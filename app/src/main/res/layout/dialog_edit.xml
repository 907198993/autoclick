<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="307dp"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_title_edit_dialog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:paddingTop="24dp"
            android:paddingBottom="24dp"
            android:text="修改分类名称"
            android:textColor="@color/color_page_title_text"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/iv_close_edit_dialog"
            android:layout_width="38dp"
            android:layout_height="38dp"
            android:layout_alignParentRight="true"
            android:padding="12dp"
            android:src="@drawable/icon_close" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp">

        <EditText
            android:id="@+id/et_edit_dialog"
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:background="@null"
            android:hint="请输入标签名"
            android:textColor="@color/color_page_title_text"
            android:textColorHint="@color/textCC"
            android:textSize="14sp" />

        <ImageView
            android:id="@+id/iv_clear_edit_dialog"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_alignParentRight="true"
            android:padding="8dp"
            android:src="@drawable/icon_delete" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"
        android:background="@color/color_page_title_text" />

    <TextView
        android:id="@+id/tv_sure_edit_dialog"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginTop="44dp"
        android:background="@drawable/selector_btn_bg"
        android:gravity="center"
        android:text="保存"
        android:textColor="@color/white"
        android:textSize="16sp" />

</LinearLayout>