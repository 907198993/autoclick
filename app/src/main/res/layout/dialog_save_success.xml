<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="34dp"
    android:layout_marginRight="34dp"
    android:background="@color/white"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_close_save_success_dialog"
        android:layout_width="38dp"
        android:layout_height="38dp"
        android:layout_gravity="right"
        android:padding="12dp"
        android:src="@drawable/icon_close" />

    <TextView
        android:id="@+id/tv_content_save_success_dialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:gravity="center"
        android:text="已保存，是否打开微信"
        android:textColor="@color/color_page_title_text"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/tv_open_wx_save_success_dialog"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginTop="24dp"
        android:background="@color/color_page_title_text"
        android:gravity="center"
        android:text="打开微信"
        android:textColor="@color/white"
        android:textSize="16sp" />

</LinearLayout>